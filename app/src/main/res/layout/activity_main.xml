<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dragontwister.bill_yard.MainActivity">

    <Button
        android:id="@+id/new_entry_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/get_info_button"
        android:layout_alignParentStart="true"
        android:onClick="onClickNewEntry"
        android:text="@string/new_entry" />

    <Button
        android:id="@+id/get_info_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="101dp"
        android:onClick="onClickGetInfo"
        android:text="@string/get_info" />

    <Button
        android:id="@+id/update_info_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_entry_button"
        android:layout_marginTop="48dp"
        android:onClick="onClickUpdateInfo"
        android:text="@string/update_info" />
</RelativeLayout>
